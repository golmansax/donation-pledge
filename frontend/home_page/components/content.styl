@require jeet
@require _colors
@require _spacing

.mainContainer {
  background $black url(./main_bg.jpg) no-repeat center -10em
  background-size auto 50em
  height unit($lambda * 22, em)
  position relative
}

.mainHeading {
  padding $spacing1x $spacingHalf 0
  border-left .2em solid $purple
}

.mainButton {
  margin-top $spacing1x
  padding-left $spacing2x
  padding-right $spacing2x
}

.headingEmphasis {
  // TODO combine this with heading
  $emphasisScale = 2.25 * 3

  // Not sure why, but it looks a little too high
  $marginTopFudge = .01em

  color $purple
  font-size unit($emphasisScale, em)
  line-height ($lambda * 4 / $emphasisScale)
  margin (-1 * $marginTopFudge) 0 $marginTopFudge
}

.section {
  padding $spacing3x 0
}

.sectionHeading {
  margin-bottom .5em
}

.mainMessage {
  background rgba($purple, .9)
  bottom 0
  color $white
  left 0
  padding $spacing1x 0
  position absolute
  text-align center
  width 100%
}

.contactSection {
  composes section
  background $darkGray
  color $white
}

.missionSection {
  composes section
  background $white
}
