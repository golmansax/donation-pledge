@require jeet
@require _colors

.mainContainer {
  background $black url(./main_bg.jpg) no-repeat center -10em
  background-size auto 50em
  height 35em
  position relative
}

.mainHeading {
  padding .5em .25em 0
  border-left .1em solid $purple
}

.mainButton {
  font-size 1.2em
  margin-top 2em
}

.headingEmphasis {
  font-size 3em
  line-height .8
  margin-bottom .05em
  color $purple
}

.section {
  padding 4rem 0
}

.sectionHeading {
  margin-bottom .5em
}

.mainMessage {
  background rgba($purple, .9)
  bottom 0
  color $white
  left 0
  padding 2rem 0
  position absolute
  text-align center
  width 100%
}

.contactSection {
  composes section
  background $darkGray
  color $white
}

.missionSection {
  composes section
  background $white
}
