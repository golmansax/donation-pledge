@require '_frontend/styles/colors'
@require '_frontend/styles/fonts'
@require '_frontend/styles/units'

html {
  box-sizing border-box
}

*, // @stylint ignore
*:before,  // @stylint ignore
*:after { // @stylint ignore
  box-sizing inherit
}

body {
  background-color $superLightGray
  font-family $textFontFamily
  color $darkGray
  line-height $lambda
}

input,
textarea {
  border 0
}
