@require '_frontend/styles/colors'
@require '_frontend/styles/spacing'

.rootElement {
  border .15em transparent solid
  cursor pointer
  display inline-block
  padding $spacingHalf $spacing1x
  text-align center
  transition background-color 300ms ease-out, opacity 300ms ease-out
  user-select none
}

.rounded {
  border-radius .5em
}

.main {
  composes rootElement
  background-color $mainColor
  color $white

  &:hover {
    background-color $darkerMainColor
  }
}

.outline {
  composes rootElement
  background-color transparent
  border-color $white

  &:hover {
    background-color $darkerMainColor
    opacity .8
  }
}

.block {
  width: 100%;
  text-align: center;
}
