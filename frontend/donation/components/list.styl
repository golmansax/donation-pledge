@require nib
@require '_frontend/styles/grid'
@require '_frontend/styles/colors'

.listItem {
  clearfix()

  padding 1em

  &:nth-child(2n + 1) {
    background-color $superLightGray
  }
}

.heading {
  font-size 1.1em
  margin-bottom .25em
}

.year {
  composes heading

  +above(rupture.mobile-cutoff) {
    col(1/8)
    text-align center
  }
}

.content {
  +above(rupture.mobile-cutoff) {
    col(7/8)
  }
}

.action {
  color $mainColor
  font-weight 700
}
