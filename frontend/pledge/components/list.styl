@require '_frontend/styles/grid'
@require nib
@require '_frontend/styles/colors'

.pledgeList {
  clearfix()

  background $white
  border $lightGray .1em solid
  border-radius .5em
  padding 2em
}

.pledgeContainer {
  col(3/4)
}

.pledge {
  clearfix()
}

.pledgeItem {
  col(1/2)
}

.userImage {
  background no-repeat center
  background-size 100%
  border-radius .5em
  margin-bottom .5em
  padding-bottom 100%
  width 100%
}

.userImageContainer {
  col(1/4)
  text-align center
}
