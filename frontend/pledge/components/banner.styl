@require jeet
@require nib
@require _colors

.rootElement {
  background $white
  border $lightGray .1em solid
  border-radius .5em
  padding 2em
}

.pledge {
  font-size 1.3em
  padding-bottom 2em
  text-align center
  margin-bottom .5em
}

@-webkit-keyframes typing {
from { width: 100% }
to { width:0 }
}

@-webkit-keyframes blink-caret {
from, to { border-color: transparent }
50% { border-color: black }
}

@-moz-keyframes typing {
from { width: 100% }
to { width:0 }
}

@keyframes cursorBlink {
  from, to { border-color: black }
  50% { border-color: transparent }
}

h1 {
position: relative;
float: left;
font-size:150%;
}

.textCursor {
  position absolute
  top 0
  right 0
  width 0
  background white
  border-left .1em solid black;

  box-sizing border-box

  //animation: typing 17s steps(30, end), blink-caret 1s step-end infinite
}

.textWithCursor {
  $cursorPadding = .2em

  border-right .2em solid black;
  padding-right $cursorPadding
  margin-left (-$cursorPadding)
  display inline-block

  animation: cursorBlink 1s step-end infinite
}
