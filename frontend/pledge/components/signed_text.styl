@require '_frontend/styles/colors'
@require '_frontend/styles/fonts'
@require '_frontend/styles/units'

.rootElement {
  position relative
}

.rootElementWithMargin {
  composes rootElement
  margin 0 .5em
}

$signedTextRatio = .9

.text {
  color $mainColor
  display inline-block
  font-family $serifFontFamily
  font-size unit($signedTextRatio, em)
  line-height ($lambda / $signedTextRatio)
}

@keyframes cursorBlink {
  from, to { border-color: black }
  50% { border-color: transparent }
}

.textWithCursor {
  $cursorPadding = .2em

  composes text
  animation cursorBlink 1s step-end infinite
  border-right .1em solid $darkGray
  padding-right $cursorPadding
  margin-left (-$cursorPadding)
}

.category {
  color $gray
  left 0
  position absolute
  text-align center
  top 1.4em
  width 100%
}

.textContainer {
  display inline-block
  border-bottom .1em dotted black
  min-width 8em
  padding 0 .5em
}

.highlightedTextContainer {
  composes textContainer
  background-color $lightYellow
}

.fullWidth {
  padding 0
  width 100%
}
