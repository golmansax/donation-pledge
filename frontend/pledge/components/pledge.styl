@require jeet
@require nib
@require _colors

.rootElement {
  background $white
  border $lightGray .1em solid
  border-radius .5em
  padding 2em
}

.pledge {
  font-size 1.3em
  padding-bottom 2em
  text-align center
  margin-bottom .5em
}

.userImage {
  background url(./holman.jpg) no-repeat center
  background-size 100%
  border-radius .5em
  margin-bottom .5em
  padding-bottom 100%
  width 100%
}

.userImageContainer {
  col(1/5)
  text-align center
}

.container {
  clearfix()
}

.otherContainer {
  col(4/5)
}

.heading {
  margin-bottom .25em
}

.section {
  margin-bottom 1em
}
